<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root styleClass="CustomerPane" stylesheets="@../styles/customer.css" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
<BorderPane fx:id="borderPane">
   <center>
      <JFXTreeTableView fx:id="tbl_view_customer" prefHeight="400.0" prefWidth="950.0" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
            <BorderPane.margin>
               <Insets bottom="10.0" left="25.0" right="15.0" top="10.0" />
            </BorderPane.margin>
         </JFXTreeTableView>
   </center>
   <bottom>
      <Button fx:id="btn_view_customer_OK" mnemonicParsing="false" onAction="#btn_view_customer_OK_handler" text="OK" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <Label alignment="CENTER" prefHeight="33.0" prefWidth="1070.0" text="Kundendaten" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
            <BorderPane.margin>
               <Insets top="10.0" />
            </BorderPane.margin>
      </Label>
   </top>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <JFXTextField fx:id="tf_filter_name" focusColor="#009688" labelFloat="true" prefHeight="29.0" prefWidth="141.0" promptText="Filter nach Kunde">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
                  <VBox.margin>
                     <Insets top="25.0" />
                  </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="tf_filter_contactPerson" focusColor="#009688" labelFloat="true" prefHeight="29.0" prefWidth="140.0" promptText="Filter nach Person">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
                  <VBox.margin>
                     <Insets top="25.0" />
                  </VBox.margin>
            </JFXTextField>
         </children>
            <BorderPane.margin>
               <Insets right="25.0" />
            </BorderPane.margin>
      </VBox>
   </right>
</BorderPane>
</fx:root>
