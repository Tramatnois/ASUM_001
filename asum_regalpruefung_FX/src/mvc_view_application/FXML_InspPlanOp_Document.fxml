<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root styleClass="InspPlanOpPane" stylesheets="@fxml_inspectionplan_operation_document.css" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <BorderPane>
      <top>
      <Label text="Prüfplanübersicht" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>
      </top>
      <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label prefWidth="150.0" text="Datum der Prüfung:">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <JFXDatePicker fx:id="tf_datepicker" editable="false" showWeekNumbers="true" styleClass="DatePickerASUM">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </JFXDatePicker>
               </children>
               <VBox.margin>
                  <Insets left="10.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label prefWidth="150.0" text="Ort der Prüfung:">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Label>
                  <JFXTextField fx:id="tf_view_inspplan_operation_location" editable="false" promptText="Ort der Prüfung:">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </JFXTextField>
               </children>
               <VBox.margin>
                  <Insets left="10.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
            <BorderPane.margin>
               <Insets right="25.0" />
            </BorderPane.margin>
      </VBox>
      </right>
      <center>
         <JFXTreeTableView fx:id="tbl_view_inspplan_operation" onMouseClicked="#tbl_view_inspplan_operation_handler" prefWidth="500.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
               <Insets bottom="10.0" left="25.0" right="15.0" top="10.0" />
            </BorderPane.margin>
         </JFXTreeTableView>
      </center>
   </BorderPane>
</fx:root>
